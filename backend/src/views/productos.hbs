<h2>Productos</h2>

{{#if data}}
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
        <th scope="col">Thumbnail</th>
      </tr>
    </thead>
    <tbody>

      {{#each data}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.title}}</td>
          <td>${{this.price}}</td>
          <td><img src={{this.thumbnail}} alt="imagen de {{this.title}}" width="50"></td>
        </tr>
      {{/each}}
    </tbody>
  </table>

{{else}}
  <div class="alert alert-warning" role="alert">
    No se encontraron productos
  </div>
  <a href="/" class="btn btn-primary" role="button">Crear producto</a>
{{/if}}