<div class="row d-flex justify-content-center">
  <div class="col-12 col-md-6">
      <header class="d-flex justify-content-between">
        <h2 class="card-title">Bienvenido <span class="text-success">{{user}}</span></h2>
        <a href="http://localhost:8080/api/auth/logout" class="btn btn-danger">Desconectar</a>
      </header>
    <div class="card mt-5">
      <div class="card-header">
        <h2>Agregar un producto</h2>
      </div>
      <div class="card-body">
        <form id="product-form">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" name="title" id="title"/>
            <label for="floatingInput">Nombre</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" class="form-control" name="price" id="price"/>
            <label for="floatingInput">Precio</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" class="form-control" name="thumbnail" id="thumbnail"/>
            <label for="floatingInput">Foto url</label>
          </div>
          <div class="" role="alert" id="error-product">
          </div>
          <button type="submit" class="btn btn-primary w-100">Crear</button>
        </form>
      </div>
    </div>
  </div>
</div>

{{>products-table}}
{{>chat}}