html(lang="en")
  head
  title= abc
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
  script(type='text/javascript').
    if (foo) bar(1 + 5)
  body
    header(class="row")
    nav(class="navbar navbar-expand-lg navbar-light bg-light")
      .container-fluid
        h1 Handlebars
        button(
          class="navbar-toggler",
          type="button",
          data-bs-toggle="collapse",
          data-bs-target="#navbarNav",
          aria-controls="navbarNav",
          aria-expanded="false",
          aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        .collapse.navbar-collapse
          ul(class="nav justify-content-center")
            li(class="nav-item")
              a(class="nav-link" href="/") Formulario
            li(class="nav-item")
              a(class="nav-link" href="/productos") Productos
    if data
      table(class="table w-100")
        thead
          tr
            th(scope="col") ID
            th(scope="col") Title
            th(scope="col") Price
            th(scope="col") Thumbnail
        tbody
          each val in data
            tr
              th= val.id
              td= val.title
              td= val.price
              td
                img(src=val.thumbnail,alt='imagen de' + val.title ,width="50")
    else
      div(class="alert alert-warning",role="alert")
        p No se encontraron productos
      a(href="/",class="btn btn-primary",role="button") Crear producto
